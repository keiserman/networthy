---
import EventIcon from "./EventIcon.astro";
import EventTag from "./EventTag.astro";
const { name, category, date, location, url } = Astro.props;
---

<div
  class="flex flex-row items-stretch gap-6 p-5 text-zinc-900 bg-white border-b border-zinc-300"
>
  <img src="" alt="" class="w-1/4 bg-zinc-100 rounded-md" />
  <div class="flex flex-col grow">
    <div class="flex flex-row gap-2 mb-2">
      <EventTag>{category}</EventTag>
    </div>
    <a href={url} class="text-xl font-semibold mb-1">{name}</a>
    <div class="text-base">{date}</div>
    <div class="text-base">{location}</div>
    <div class="text-base font-bold mt-2">$90</div>
    <div
      class="flex flex-row flex-wrap items-center justify-between gap-4 mt-4"
    >
      <a
        href="#"
        class="text-sm py-1 px-2 border border-zinc-200 rounded-md transition hover:shadow-sm hover:bg-zinc-50"
        >Add to calendar</a
      >
      <div class="flex gap-2">
        <EventIcon iconName="ph:heart-bold" />
        <EventIcon iconName="ph:share-network-bold" />
        <EventIcon iconName="ph:dots-three-bold" />
      </div>
    </div>
  </div>
</div>
