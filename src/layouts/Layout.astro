---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "@fontsource-variable/inter";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  .container {
    @apply max-w-screen-xl m-auto px-6;
  }

  .nav-link {
    @apply text-zinc-700;
  }

  .btn {
    @apply text-sm py-2 px-3 border text-white bg-orange-600 border-orange-600 rounded;
  }

  .btn.btn-outline {
    @apply py-2 px-3 bg-transparent text-zinc-700 border-zinc-300 rounded;
  }

  h1 {
    @apply text-5xl font-semibold;
  }
</style>
