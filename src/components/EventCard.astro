---
import Icon from "../components/Icon.astro";
---

<div
  class="flex flex-row items-stretch gap-6 p-5 border border-zinc-200 rounded-md text-zinc-900 bg-white"
>
  <img src="" alt="" class="w-1/4 bg-zinc-100 rounded-md" />
  <div class="flex flex-col grow">
    <div class="flex flex-row gap-2 mb-2">
      <div class="text-xs bg-zinc-100 py-1 px-2 rounded-md">Real Estate</div>
    </div>
    <div class="text-2xl font-semibold mb-1">Event Name</div>
    <div class="text-base">September 30, 2024</div>
    <div class="text-base">New York, NY</div>
    <div class="text-base font-bold mt-2">$90</div>
    <div class="flex flex-row items-center justify-between gap-4 mt-4">
      <a
        href="#"
        class="text-sm py-1 px-2 border border-zinc-200 rounded-md transition hover:shadow-sm"
        >Add to calendar</a
      >
      <div class="flex gap-2">
        <div class="p-1 bg-zinc-100 rounded-full">
          <Icon name="coffee" class="text-gray-500 w-6 h-6" strokeWidth={1.5} />
        </div>
        <div class="p-1 bg-zinc-100 rounded-full">B</div>
      </div>
    </div>
  </div>
</div>
